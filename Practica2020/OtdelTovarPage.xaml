<Page x:Class="Practica2020.OtdelTovarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practica2020"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OtdelTovarPage" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DGridOtdelTovarPage" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя отдела" Binding="{Binding Отдел.Имя_отдела}" Width="200"/>
                <DataGridTextColumn Header="Имя товара" Binding="{Binding Товар.Имя_товара}" Width="*"/>
                <DataGridTextColumn Header="Кол-во товара" Binding="{Binding Кол_во_товара}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
