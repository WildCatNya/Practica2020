<Page x:Class="Practica2020.StartUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practica2020"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartUpPage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Click="Button_ClickMagazine" Content="Go to Magazine" Grid.Row="0" Background="Yellow" Width="auto" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Grid.Column="1" Click="Button_ClickOtdel" Content="Go to Otdel" Grid.Row="0" Background="Yellow" Width="auto" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Grid.Column="2" Click="Button_ClickOtdel" Content="Go to Tovar" Grid.Row="0" Background="Yellow" Width="auto" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
