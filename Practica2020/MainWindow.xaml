<Window x:Class="Practica2020.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica2020"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="LightGreen"/>
        <TextBlock Grid.Row="0" Text="База данных &quot;Сеть магазина&quot;"
                   FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Frame Grid.Row="1" Name="MainFrame"/>
        <Grid Grid.Row="2"  Background="Aqua"/>
        <TextBlock Grid.Row="2" Text="Качество - залог нашего успеха"
                   FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
