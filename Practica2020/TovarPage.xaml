<Page x:Class="Practica2020.TovarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practica2020"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TovarPage" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DGridMagPage" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя товара" Binding="{Binding Имя_товара}" Width="200"/>
                <DataGridTextColumn Header="Стоимость товара за 1 кг" Binding="{Binding Стоимость_товара_за_1_кг}" Width="*"/>
                <DataGridTextColumn Header="Ед. измерения" Binding="{Binding Ед__изм_}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
